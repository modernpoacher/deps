{
  "name": "@modernpoacher/deps",
  "version": "0.1.1",
  "description": "Update NPM package dependencies from the command line",
  "keywords": [
    "deps",
    "dependencies",
    "devDependencies",
    "optionalDependencies",
    "bundleDependencies",
    "peerDependencies"
  ],
  "main": "./app.js",
  "author": "Jonathan Perry for Modern Poacher Limited <modernpoacher@modernpoacher.com>",
  "license": "MIT",
  "engines": {
    "node": ">=12.18.1"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/modernpoacher/deps"
  },
  "homepage": "https://github.com/modernpoacher/deps",
  "bugs": {
    "url": "https://github.com/modernpoacher/deps/issues"
  },
  "scripts": {
    "prepublishOnly": "cross-env NODE_ENV=production npm run build",
    "prebuild": "npm run clean",
    "start": "cross-env DEBUG=@modernpoacher/deps* NODE_ENV=production node app",
    "dev": "cross-env DEBUG=@modernpoacher/deps* NODE_ENV=development node app",
    "dev-install": "cross-env DEBUG=@modernpoacher/deps* NODE_ENV=development node install/app",
    "build": "npm run babel",
    "build:watch": "npm run babel:watch",
    "clean": "rimraf lib",
    "babel": "babel src -d lib",
    "babel:watch": "npm run babel -- -w",
    "lint": "eslint .",
    "lint:fix": "npm run lint -- --fix",
    "test": "NODE_ENV=test mocha test --recursive -r @babel/register --verbose",
    "pre-commit": "npm run lint && npm run test && npm run build && git add lib"
  },
  "bin": {
    "deps": "./app.js",
    "deps-install": "./install/app.js"
  },
  "dependencies": {
    "commander": "^5.1.0",
    "debug": "^4.1.1",
    "sacred-fs": "^1.0.17"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.3",
    "@babel/core": "^7.10.3",
    "@babel/preset-env": "^7.10.3",
    "@babel/register": "^7.10.3",
    "babel-eslint": "^10.1.0",
    "babel-plugin-module-resolver": "^4.0.0",
    "babel-plugin-syntax-async-functions": "^6.13.0",
    "chai": "^4.2.0",
    "core-js": "^3.6.5",
    "cross-env": "^7.0.2",
    "eslint": "^7.3.1",
    "eslint-config-standard": "^14.1.1",
    "eslint-import-resolver-babel-module": "^5.1.2",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-mocha": "^7.0.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "husky": "^4.2.5",
    "mocha": "^8.0.1",
    "rimraf": "^3.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run pre-commit"
    }
  }
}
